<%= form_for [@book, @review] do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title, required: true %><br />

  <%= f.label "User Name" %>:
  <%= f.text_field :user, required: true %><br />

  <%= f.label :rating %>:
  <%= f.number_field :rating, min: 1, max: 5, required: true %><br />

  <%= f.label :body %>:
  <%= f.text_field :body, required: true %><br />

  <%= f.submit "Create Review" %>
<% end %>
