<!-- app/views/books/new.html.erb -->

<%= form_for @book do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title, required: true %><br />

  <%= f.label :pages %>:
  <%= f.number_field :pages, min: 1, required: true %><br />

  <%= f.label :published %>:
  <%= f.number_field :year_pub, required: true %><br />

  <%= f.label "Book Image"%>:
  <%= f.text_field :cover_img %><br />

  <%= f.label :authors %>:
  <%= f.text_field :authors, value: " ", required: true %><br />

  <%= f.submit "Add Book" %>
<% end %>
