<!-- app/views/users/show.html.erb -->

<h3>Reviews by <%= @user.name %></h3>

  <div>
    <% @user.reviews.each do |review| %>
      <div id="test-review-index-<%= review.id %>">
        <p><%= review.title %></p>
        <p>Rating <%= review.rating %></p>
        <p><%= review.body %></p>
        <p>Book: <%= review.book.title %></p>

        <div>
          <img id="cover-thumbnail" src="<%= review.book.cover_img %>"/>
        </div>

        <p>Review created: <%= review.created_at %></p>
        <p><%= link_to "Delete Review", user_review_path(review), method: :delete, data: {confirm: "Do you really want to delete this review?"} %></p>
      </div>

    <% end %>
  </div>
