<!-- app/views/users/show.html.erb -->

<h3>Reviews by <%= @user.name %></h3>

<div>
  <% @user.reviews.each do |review| %>
  <p><%= review.title %></p>
  <p>Rating <%= review.rating %></p>
  <p><%= review.body %></p>
  <p>Book: <%= review.book.title %></p>

  <div class="thumbnail">
    <img src="<%= review.book.cover_img %>"/>
  </div>

  <p>Review created: <%= review.created_at %></p>
  <% end %>
</div>
